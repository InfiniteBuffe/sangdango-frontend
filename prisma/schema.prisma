generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RentalLog {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(10)
  studentId Int
  createdAt DateTime @default(now())
}

model CurrentRental {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(10)
  studentId Int
  createdAt DateTime @default(now())
}

